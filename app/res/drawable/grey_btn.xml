<?xml version="1.0" encoding="utf-8"?>
<selector
  xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <solid android:color="#ffc0c0c0" />
            <!-- <stroke android:width="1.0dip" android:color="#ffb0b0b0" /> -->
            <corners android:topLeftRadius="2dip" android:topRightRadius="2dip" android:bottomLeftRadius="2dip" android:bottomRightRadius="2dip" />
            <padding android:left="6dip" android:top="2dip" android:right="6dip" android:bottom="2dip" />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape>
            <solid android:color="#ffc0c0c0" />
            <corners android:topLeftRadius="2dip" android:topRightRadius="2dip" android:bottomLeftRadius="2dip" android:bottomRightRadius="2dip" />
            <padding android:left="6dip" android:top="2dip" android:right="6dip" android:bottom="2dip" />
        </shape>
    </item>
    <item>
        <shape>
            <solid android:color="#ffdddddd" />
            <!-- <stroke android:width="1.0dip" android:color="#ffb0b0b0" /> -->
            <gradient android:startColor="#ffe9e9e9" android:endColor="#ffd1d1d1" android:angle="270.0" android:centerColor="#ffdddddd" />
            <corners android:topLeftRadius="2dip" android:topRightRadius="2dip" android:bottomLeftRadius="2dip" android:bottomRightRadius="2dip" />
            <padding android:left="6dip" android:top="2dip" android:right="6dip" android:bottom="2dip" />
        </shape>
    </item>
</selector>
