<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/comm_title" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:scrollbars="none" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <LinearLayout
                android:id="@+id/cert_lay"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/common_item_selector"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:layout_height="match_parent"
                    android:text="实名认证"
                    android:textColor="@color/textColor"
                    android:textSize="17sp" />

                <TextView
                    android:id="@+id/tv_cert"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:textSize="17sp"
                    android:textColor="@color/hintColor"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:text="未认证"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/accessory"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/modify_lay"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/common_item_selector"
                android:layout_marginTop="10dp"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:layout_height="match_parent"
                    android:text="登录密码"
                    android:textColor="@color/textColor"
                    android:textSize="17sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:textSize="17sp"
                    android:textColor="@color/hintColor"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:text="修改/找回"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/accessory"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/face_lay"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/common_item_selector"
                android:layout_marginTop="10dp"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:layout_height="match_parent"
                    android:text="人脸登录"
                    android:textColor="@color/textColor"
                    android:textSize="17sp" />

                <TextView
                    android:id="@+id/tv_face"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:textSize="17sp"
                    android:textColor="@color/hintColor"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:text="未开通"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    android:src="@drawable/accessory"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/thrid_lay"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/common_item_selector"
                android:layout_marginTop="10dp"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:layout_height="match_parent"
                    android:text="第三方账号绑定"
                    android:textColor="@color/textColor"
                    android:textSize="17sp" />

                <LinearLayout
                    android:id="@+id/account_lay"
                    android:layout_width="wrap_content"
                    android:orientation="horizontal"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right|center_vertical"
                        android:orientation="horizontal" >

                        <ImageView
                            android:id="@+id/iv_qq"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingLeft="5dp"
                            android:src="@drawable/ic_bind_qq"
                            android:visibility="gone" />

                        <ImageView
                            android:id="@+id/iv_wx"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingLeft="5dp"
                            android:src="@drawable/ic_bind_wx"
                            android:visibility="gone" />
                        <ImageView
                            android:id="@+id/iv_wb"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingLeft="5dp"
                            android:src="@drawable/ic_bind_wb"
                            android:visibility="gone" />
                    </LinearLayout>
                </LinearLayout>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/accessory"/>
            </LinearLayout>

            <Button
                android:id="@+id/btn_logout"
                android:layout_width="match_parent"
                android:layout_height="49dp"
                android:layout_margin="15dp"
                android:background="@drawable/common_round_rectangle_red_bg"
                android:text="退出登录"
                android:textColor="#fff"
                android:textSize="17sp" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>