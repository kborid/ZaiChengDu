<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/page_background"
    android:orientation="vertical" >

    <include layout="@layout/comm_title" />

    <TableLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        android:orientation="vertical"
        android:padding="20dp"
        android:stretchColumns="1" >

        <TableRow android:paddingTop="10dp" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:singleLine="true"
                android:text="原密码："
                android:textColor="@color/item_value_color"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/et_old_pwd"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@null"
                android:gravity="left"
                android:hint="请输入原密码"
                android:singleLine="true"
                android:password="true"
                android:textColor="@color/item_key_color"
                android:textSize="16sp" />
        </TableRow>

        <TableRow android:paddingTop="10dp" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:singleLine="true"
                android:text="新密码："
                android:textColor="@color/item_value_color"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/et_new_pwd"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@null"
                android:gravity="left"
                android:hint="请输入6-20个字符"
                android:singleLine="true"
                android:password="true"
                android:maxLength="20"
                android:textColor="@color/item_key_color"
                android:textSize="16sp" />
        </TableRow>

        <TableRow android:paddingTop="10dp" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:singleLine="true"
                android:text="确认密码："
                android:textColor="@color/item_value_color"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/et_new_pwd2"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@null"
                android:gravity="left"
                android:hint="请输入6-20个字符"
                android:singleLine="true"
                android:password="true"
                android:maxLength="20"
                android:textColor="@color/item_key_color"
                android:textSize="16sp" />
        </TableRow>
    </TableLayout>


    <Button
        android:id="@+id/btn_save"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_gravity="bottom|center_horizontal"
        android:layout_marginLeft="29dip"
        android:layout_marginRight="29dip"
        android:layout_marginTop="15dp"
        android:background="@drawable/common_blue_rounded_btn_bg"
        android:text="保存"
        android:textColor="#f5f5f5"
        android:textSize="18sp" />

</LinearLayout>