<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/page_background"
    android:orientation="vertical" >

    <include layout="@layout/comm_title" />

    <TableLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="14dp"
        android:background="#ffffff"
        android:orientation="vertical"
        android:stretchColumns="1" >

        <TableRow
            android:gravity="center_vertical"
            android:padding="20dp" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:singleLine="true"
                android:text="新手机号"
                android:textColor="@color/item_value_color"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/et_phone_new"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:background="@null"
                android:gravity="left"
                android:hint="请输入手机号"
                android:inputType="phone"
                android:maxLength="11"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:singleLine="true"
                android:textColor="@color/item_key_color"
                android:textSize="16sp" />
        </TableRow>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="20dp"
            android:background="@color/title_line" />

        <TableRow
            android:gravity="center_vertical"
            android:padding="20dp" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:singleLine="true"
                android:text="验证码"
                android:textColor="@color/item_value_color"
                android:textSize="16sp" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <EditText
                    android:id="@+id/et_yzm"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:gravity="left"
                    android:hint="请输入验证码"
                    android:inputType="phone"
                    android:maxLength="10"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:singleLine="true"
                    android:textColor="@color/item_key_color"
                    android:textSize="16sp" />

                <Button
                    android:id="@+id/btn_getYZM"
                    android:layout_width="80dp"
                    android:layout_height="30dp"
                    android:background="@drawable/common_blue_rounded_btn_bg"
                    android:padding="8dp"
                    android:layout_marginLeft="20dp"
                    android:text="获取验证码"
                    android:textColor="#fff"
                    android:textSize="12sp" />
            </LinearLayout>
        </TableRow>
    </TableLayout>

    <Button
        android:id="@+id/btn_sbmit"
        style="@style/blue_button_style"
        android:layout_width="match_parent"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp"
        android:text="完成" />

</LinearLayout>