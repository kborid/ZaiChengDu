<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#fff"
    android:gravity="center_vertical"
    android:minHeight="120dp"
    android:orientation="horizontal" >

    <!-- 左侧 -->

    <LinearLayout
        android:id="@+id/layout_01"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="3dp"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/img_scene_1"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:scaleType="fitXY" />

        <TextView
            android:id="@+id/tv_scene_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            android:textColor="@color/item_value_color"
            android:textSize="@dimen/index_text_size" />
    </LinearLayout>

    <!-- 2 -->

    <LinearLayout
        android:id="@+id/layout_02"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="3dp"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/img_scene_2"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:scaleType="fitXY" />
        <!-- android:text="交通出行" -->

        <TextView
            android:id="@+id/tv_scene_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            android:textColor="@color/item_value_color"
            android:textSize="@dimen/index_text_size" />
    </LinearLayout>
    <!-- 3 -->

    <LinearLayout
        android:id="@+id/layout_03"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="3dp"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/img_scene_3"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:scaleType="fitXY" />
        <!-- android:text="机构查询" -->

        <TextView
            android:id="@+id/tv_scene_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            android:textColor="@color/item_value_color"
            android:textSize="@dimen/index_text_size" />
    </LinearLayout>
    <!-- 4 -->

    <LinearLayout
        android:id="@+id/layout_04"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="3dp"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/img_scene_4"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:scaleType="fitXY" />
        <!-- android:text="广播电视" -->

        <TextView
            android:id="@+id/tv_scene_4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            android:textColor="@color/item_value_color"
            android:textSize="@dimen/index_text_size" />
    </LinearLayout>

</LinearLayout>