<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/viewPager" >

    <include layout="@layout/comm_title" />

    <LinearLayout
        android:id="@+id/layout_type"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@color/titlecolor"
        android:gravity="center" >

        <TextView
            android:id="@+id/tv_btn_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/index_search"
            android:gravity="center"
            android:text="我的问题"
            android:textColor="@color/home_tab_text_checked"
            android:textSize="14sp" />

        <View
            android:layout_width="50dp"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tv_btn_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/transparent"
            android:gravity="center"
            android:text="我的关注"
            android:textColor="@color/white"
            android:textSize="14sp" />
    </LinearLayout>

    <ImageView
        android:id="@+id/iv_view_line"
        android:layout_width="wrap_content"
        android:layout_height="2dp"
        android:layout_marginTop="-2dp"
        android:background="@color/text_color_on"
        android:visibility="visible" />

    <android.support.v4.view.ViewPager
        android:id="@+id/viewpager"
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="1.0" />

</LinearLayout>