<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/viewPager"
    android:background="@drawable/share_bg" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_height"
        android:background="@color/transparent" >

        <!-- 捕获焦点 -->

        <View
            android:layout_width="0px"
            android:layout_height="0px"
            android:focusable="true"
            android:focusableInTouchMode="true" />

        <TextView
            android:id="@+id/tv_left_title"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:drawableLeft="@drawable/m_back"
            android:gravity="center_vertical"
            android:paddingLeft="16dip"
            android:paddingRight="5dip"
            android:textColor="@color/second_level_title_color"
            android:textSize="@dimen/title_left_reight_text_size" />

        <TextView
            android:id="@+id/tv_center_title"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_centerHorizontal="true"
            android:gravity="center_vertical"
            android:text="标题"
            android:textColor="@color/white"
            android:textSize="@dimen/title_center_text_size" />

        <TextView
            android:id="@+id/tv_right_title"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_alignParentRight="true"
            android:gravity="center_vertical"
            android:paddingLeft="5dip"
            android:paddingRight="16dip"
            android:textColor="@color/second_level_title_color"
            android:textSize="@dimen/title_left_reight_text_size" />
    </RelativeLayout>

    <TableLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="25dp"
        android:background="@drawable/search_bg"
        android:orientation="vertical"
        android:stretchColumns="1" >

        <TableRow
            android:gravity="center_vertical"
            android:minHeight="60dp"
            android:padding="10dp" >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:paddingLeft="10dp"
                android:paddingRight="20dp"
                android:src="@drawable/phone" />

            <EditText
                android:id="@+id/et_phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@null"
                android:gravity="left"
                android:hint="手机号码"
                android:inputType="phone"
                android:maxLength="11"
                android:paddingRight="10dp"
                android:singleLine="true"
                android:textColor="@color/item_key_color"
                android:textSize="16sp" />
        </TableRow>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/item_line" />

        <TableRow
            android:gravity="center_vertical"
            android:minHeight="60dp"
            android:padding="10dp" >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:paddingRight="20dp"
                android:src="@drawable/iv_qr" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <EditText
                    android:id="@+id/et_yzm"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:hint="手机验证码"
                    android:maxLength="10"
                    android:paddingBottom="8dp"
                    android:paddingTop="8dp"
                    android:singleLine="true"
                    android:textColor="@color/item_key_color"
                    android:textSize="16sp" />

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_marginRight="20dp"
                    android:gravity="right|center" >

                    <Button
                        android:id="@+id/btn_getYZM"
                        style="@style/blue_button_style"
                        android:layout_width="80dp"
                        android:layout_height="30dp"
                        android:padding="3dp"
                        android:text="获取验证码"
                        android:textColor="#fff"
                        android:textSize="12sp" />
                </LinearLayout>
            </LinearLayout>
        </TableRow>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/item_line" />

        <TableRow
            android:gravity="center_vertical"
            android:minHeight="60dp"
            android:padding="10dp" >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:paddingRight="20dp"
                android:src="@drawable/password" />

            <EditText
                android:id="@+id/et_password"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@null"
                android:gravity="left"
                android:hint="重新设置您的登录密码"
                android:maxLength="20"
                android:password="true"
                android:singleLine="true"
                android:textColor="@color/item_key_color"
                android:textSize="16sp" />
        </TableRow>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/item_line" />

        <TableRow
            android:gravity="center_vertical"
            android:minHeight="60dp"
            android:padding="10dp" >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:paddingRight="20dp"
                android:src="@drawable/iv_pwd_t" />

            <EditText
                android:id="@+id/et_password2"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@null"
                android:gravity="left"
                android:hint="确认您的登录密码"
                android:maxLength="20"
                android:password="true"
                android:singleLine="true"
                android:textColor="@color/item_key_color"
                android:textSize="16sp" />
        </TableRow>
    </TableLayout>

    <Button
        android:id="@+id/btn_reset"
        style="@style/blue_button_style"
        android:layout_gravity="bottom|center_horizontal"
        android:layout_marginLeft="25dip"
        android:layout_marginRight="25dip"
        android:layout_marginTop="15dp"
        android:text="重置密码" />

</LinearLayout>