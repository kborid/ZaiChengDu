<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Base application theme. -->
    <style name="BaseAppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <!--控制window默认背景-->
        <item name="android:windowBackground">@null</item>
        <!--控制状态栏显示明暗主题-->
        <item name="android:windowLightStatusBar">false</item>
    </style>

    <!-- App theme. -->
    <style name="BaseAppTheme.AppTheme">
        <item name="android:windowBackground">@color/defaultBg</item>
        <!--控制状态栏是否透明（布局内容是否沁入到状态栏），默认false-->
        <item name="android:windowTranslucentStatus">false</item>
        <!--控制虚拟导航栏是否透明（布局内容是否沁入到虚拟导航栏），默认false-->
        <item name="android:windowTranslucentNavigation">false</item>
        <!--控制window背景是否透明-->
        <item name="android:windowIsTranslucent">true</item>
    </style>

    <!--splashTheme-->
    <style name="BaseAppTheme.SplashTheme">
        <item name="android:windowBackground">@drawable/launch_bg</item>
        <!--控制布局全屏显示-->
        <item name="android:windowFullscreen">true</item>
    </style>

    <!-- ui 最外层风格 -->
    <style name="viewPager">
        <item name="android:orientation">vertical</item>
        <item name="android:background">@color/defaultBg</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:baselineAligned">false</item>
    </style>

    <!-- 底部 导航风格 -->
    <style name="radio_btn_style">
        <item name="android:gravity">center</item>
        <item name="android:paddingTop">3dp</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textSize">11sp</item>
        <item name="android:paddingBottom">2dp</item>
        <item name="android:textColor">@color/radiobutton_text_color</item>
        <item name="android:button">@null</item>
    </style>

    <!-- checkBox风格 -->
    <style name="checkBox_style" parent="@android:style/Widget.CompoundButton.CheckBox">
        <item name="android:button">@drawable/checkbox_selector</item>
    </style>

    <!-- login checkBox风格 -->
    <style name="login_checkBox_style" parent="@android:style/Widget.CompoundButton.CheckBox">
        <item name="android:button">@drawable/login_checkbox_show_pwd</item>
    </style>

    <style name="share_anmi" parent="@android:style/Animation">
        <item name="android:windowEnterAnimation">@anim/push_up_in</item>
        <item name="android:windowExitAnimation">@anim/push_up_out</item>
    </style>

    <!-- 地址管理 checkBox风格 -->
    <style name="address_checkBox_style" parent="@android:style/Widget.CompoundButton.CheckBox">
        <item name="android:button">@drawable/address_checkbox_selector</item>
    </style>

    <!-- 圆角头像style -->
    <style name="round_photo_style">
        <item name="android:layout_width">82dp</item>
        <item name="android:layout_height">82dp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:padding">2dp</item>
        <item name="android:background">@drawable/drawable_round</item>
        <item name="android:scaleType">fitXY</item>
    </style>

    <style name="progressBarStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:indeterminate">true</item>
        <item name="android:indeterminateDrawable">@drawable/progressbar_rotate_drawable_</item>
    </style>

    <style name="iphone_progress_dialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <!-- Dialog的windowFrame框为无 -->
        <item name="android:windowIsFloating">true</item>
        <!-- 是否漂现在activity上 -->
        <item name="android:windowIsTranslucent">true</item>
        <!-- 是否半透明 -->
        <item name="android:windowNoTitle">true</item>
        <item name="android:backgroundDimEnabled">false</item>
        <item name="android:windowBackground">@color/transparent</item>
    </style>

    <style name="blue_button_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:background">@drawable/common_blue_rounded_btn_bg</item>
        <item name="android:textColor">#fff</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="tabTextAppearance" parent="TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/item_key_color</item>
    </style>

</resources>