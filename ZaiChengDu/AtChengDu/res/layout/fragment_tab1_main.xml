<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/page_background" >

    <com.handmark.pulltorefresh.library.PullToRefreshScrollView
        xmlns:pullToRefresh="http://schemas.android.com/apk/res-auto"
        android:id="@+id/scroll_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fadingEdge="none"
        android:fillViewport="true"
        android:overScrollMode="never"
        android:scrollbars="none"
        pullToRefresh:ptrAnimationStyle="flip"
        pullToRefresh:ptrHeaderTextColor="@color/headerTextColor"
        pullToRefresh:ptrMode="pullFromStart"
        pullToRefresh:ptrShowIndicator="false" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <include layout="@layout/top_gallery_item" />

            <!-- 今日头条 -->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/common_item_selector"
                android:orientation="horizontal"
                android:padding="15dp" >

                <ImageView
                    android:layout_width="60dp"
                    android:layout_height="21dp"
                    android:background="@drawable/ic_top_story" />

                <TextView
                    android:id="@+id/tv_news"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawablePadding="6dp"
                    android:drawableRight="@drawable/accessory"
                    android:paddingLeft="30dp"
                    android:singleLine="true"
                    android:textColor="@color/item_value_color"
                    android:textSize="14sp" />
            </LinearLayout>

            <!-- 热门服务 -->

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ic_hot"
                android:drawablePadding="2dp"
                android:gravity="center_vertical"
                android:paddingBottom="6dp"
                android:paddingLeft="15dp"
                android:paddingTop="6dp"
                android:singleLine="true"
                android:text="热门服务"
                android:textColor="#A0A0A0"
                android:textSize="11sp" />

            <com.common.widget.custom.MyGridViewWidget
                android:id="@+id/gridview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#fff"
                android:cacheColorHint="#00000000"
                android:columnWidth="90dp"
                android:gravity="center"
                android:horizontalSpacing="0dp"
                android:scrollbars="none"
                android:stretchMode="columnWidth"
                android:verticalSpacing="0dp" />

            <!-- 你问我答 -->

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ic_nwwd"
                android:drawablePadding="2dp"
                android:gravity="center_vertical"
                android:paddingBottom="6dp"
                android:paddingLeft="15dp"
                android:paddingTop="6dp"
                android:singleLine="true"
                android:text="有问必答"
                android:textColor="#A0A0A0"
                android:textSize="11sp" />

            <com.common.widget.custom.MyListViewWidget
                android:id="@+id/listView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:cacheColorHint="#00000000"
                android:divider="@color/transparent"
                android:dividerHeight="7dp"
                android:overScrollMode="never"
                android:paddingBottom="2dp" />
        </LinearLayout>
    </com.handmark.pulltorefresh.library.PullToRefreshScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/gradient_bg" >

        <include layout="@layout/comm_main_title" />
    </LinearLayout>

</RelativeLayout>