<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/viewPager"
    android:background="#fff" >

    <!-- <include layout="@layout/comm_title" /> -->

    <RelativeLayout
        android:id="@+id/comm_title_rl"
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_height"
        android:background="@color/second_level_title_bg" >

        <!-- 捕获焦点 -->

        <View
            android:layout_width="0px"
            android:layout_height="0px"
            android:focusable="true"
            android:focusableInTouchMode="true" />

        <LinearLayout
            android:id="@+id/tv_left_title_layout"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:background="@drawable/common_title_btn_selector"
            android:gravity="center"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="60dip"
                android:layout_height="fill_parent"
                android:drawableLeft="@drawable/m_back"
                android:gravity="center"
                android:paddingLeft="5dp"
                android:singleLine="true"
                android:text="返回"
                android:textColor="@color/second_level_title_color"
                android:textSize="@dimen/title_left_reight_text_size" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/tv_left_title_close"
            android:layout_width="60dip"
            android:layout_height="fill_parent"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/tv_left_title_layout"
            android:background="@drawable/common_title_btn_selector"
            android:gravity="center"
            android:orientation="horizontal"
            android:visibility="gone" >

            <TextView
                android:layout_width="60dip"
                android:layout_height="fill_parent"
                android:gravity="center"
                android:singleLine="true"
                android:text="关闭"
                android:textColor="@color/second_level_title_color"
                android:textSize="@dimen/title_left_reight_text_size" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_center_title"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_toRightOf="@id/tv_left_title_close"
            android:gravity="center"
            android:paddingLeft="10dp"
            android:singleLine="true"
            android:textColor="@color/second_level_title_color"
            android:textSize="@dimen/title_center_text_size" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/layout_test"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:visibility="gone" >

        <EditText
            android:id="@+id/et_url"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="5"
            android:hint="(模式切换 0:uat 1:非uat 2:研发) 请输入地址"
            android:inputType="textUri"
            android:textSize="12sp" />

        <Button
            android:id="@+id/btn_go"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="GO" />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_cur"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:padding="10dp"
        android:textSize="12dp"
        android:visibility="gone" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <!-- 加载页面 -->

            <WebView
                android:id="@+id/webview"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fadingEdge="none"
                android:overScrollMode="never" />
        </LinearLayout>

        <com.common.widget.custom.CommonLoadingWidget
            android:id="@+id/common_loading_widget"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone" />
    </FrameLayout>

</LinearLayout>