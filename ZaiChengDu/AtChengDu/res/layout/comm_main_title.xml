<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_title_panel"
    android:layout_width="match_parent"
    android:layout_height="@dimen/title_height"
    android:background="@color/titlecolor"
    android:gravity="center_vertical" >

    <!-- 捕获焦点 -->

    <View
        android:layout_width="0px"
        android:layout_height="0px"
        android:focusable="true"
        android:focusableInTouchMode="true" />

    <TextView
        android:id="@+id/tv_left_title"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="4"
        android:gravity="center_vertical"
        android:paddingLeft="16dip"
        android:paddingRight="8dip"
        android:text="@string/city_name"
        android:textColor="@color/white"
        android:textSize="18sp" />

    <LinearLayout
        android:id="@+id/tv_center_title_layout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp"
        android:layout_weight="2"
        android:background="@drawable/index_search"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingLeft="8dip"
        android:paddingRight="8dip" >

        <TextView
            android:id="@+id/tv_center_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/search"
            android:drawablePadding="5dp"
            android:text="搜服务"
            android:textColor="#bbb"
            android:textSize="14sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/tv_right_title_layout"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="4"
        android:background="@drawable/common_title_btn_selector"
        android:gravity="center" >

        <ImageView
            android:id="@+id/iv_right_title"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_gravity="center_vertical|right"
            android:gravity="center"
            android:scaleType="centerInside"
            android:src="@drawable/ic_user"
            android:textSize="18sp" />
    </LinearLayout>

</LinearLayout>