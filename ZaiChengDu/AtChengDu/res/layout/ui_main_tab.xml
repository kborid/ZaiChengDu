<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <!-- 底部导航栏 -->

        <LinearLayout
            android:id="@+id/layout_footer_main"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="#fff"
            android:orientation="vertical" >

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="#e5e5e5" />

            <RadioGroup
                android:id="@+id/radioGroup"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_gravity="bottom"
                android:background="@color/home_tab_bg"
                android:checkedButton="@+id/qu_btn_01"
                android:orientation="horizontal"
                android:paddingTop="2dp" >

                <RadioButton
                    android:id="@+id/qu_btn_01"
                    style="@style/redio_btn_style"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:background="@drawable/bg_button"
                    android:drawablePadding="3dp"
                    android:drawableTop="@drawable/radiobutton_img_bg1"
                    android:gravity="center"
                    android:text="首页" />

                <RadioButton
                    android:id="@+id/qu_btn_02"
                    style="@style/redio_btn_style"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:background="@drawable/bg_button"
                    android:drawableTop="@drawable/radiobutton_img_bg2"
                    android:text="服务" />

                <RadioButton
                    android:id="@+id/qu_btn_03"
                    style="@style/redio_btn_style"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:background="@drawable/bg_button"
                    android:drawablePadding="3dp"
                    android:drawableTop="@drawable/radiobutton_img_bg3"
                    android:gravity="center"
                    android:text="问答" />
            </RadioGroup>
        </LinearLayout>

        <android.support.v4.view.ViewPager
            android:id="@+id/viewPager"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@id/layout_footer_main"
            android:orientation="vertical" />

        <!--
             <FrameLayout
            android:id="@+id/viewPager"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_above="@id/layout_footer_main"
            />
        -->
    </RelativeLayout>

    <!-- The navigation drawer -->

    <FrameLayout
        android:id="@+id/left_menu"
        android:layout_width="240dp"
        android:layout_height="match_parent"
        android:layout_gravity="end" >

        <include layout="@layout/view_main_right_menu" />
    </FrameLayout>

</android.support.v4.widget.DrawerLayout>