<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/page_background"
    android:orientation="vertical" >

    <include layout="@layout/comm_title" />

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:scrollbars="none" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <LinearLayout
                android:id="@+id/ly_feedback"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/common_item_selector"
                android:orientation="horizontal"
                android:paddingLeft="40dp"
                android:paddingRight="6dp" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:singleLine="true"
                    android:text="意见反馈"
                    android:textColor="@color/input_text_color"
                    android:textSize="16sp" />

                <ImageView
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_gravity="right|center"
                    android:scaleType="centerInside"
                    android:src="@drawable/accessory" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/item_line" />

            <LinearLayout
                android:id="@+id/ly_problem"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:background="@drawable/common_item_selector"
                android:orientation="horizontal"
                android:paddingLeft="40dp"
                android:paddingRight="6dp" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:singleLine="true"
                    android:text="常见问题"
                    android:textColor="@color/input_text_color"
                    android:textSize="16sp" />

                <ImageView
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_gravity="right|center"
                    android:scaleType="centerInside"
                    android:src="@drawable/accessory" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ly_update"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/common_item_selector"
                android:orientation="horizontal"
                android:paddingBottom="3dp"
                android:paddingLeft="40dp"
                android:paddingRight="6dp"
                android:paddingTop="3dp" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:singleLine="true"
                    android:text="版本更新"
                    android:textColor="@color/input_text_color"
                    android:textSize="16sp" />

                <ImageView
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_gravity="right|center"
                    android:scaleType="centerInside"
                    android:src="@drawable/accessory" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/item_line" />

            <LinearLayout
                android:id="@+id/ly_guide"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:background="@drawable/common_item_selector"
                android:orientation="horizontal"
                android:paddingBottom="3dp"
                android:paddingLeft="40dp"
                android:paddingRight="6dp"
                android:paddingTop="3dp" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:singleLine="true"
                    android:text="产品导读"
                    android:textColor="@color/input_text_color"
                    android:textSize="16sp" />

                <ImageView
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_gravity="right|center"
                    android:scaleType="centerInside"
                    android:src="@drawable/accessory" />
            </LinearLayout>


            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/item_line" />

            <LinearLayout
                android:id="@+id/ly_about"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:background="@drawable/common_item_selector"
                android:orientation="horizontal"
                android:paddingBottom="3dp"
                android:paddingLeft="40dp"
                android:paddingRight="6dp" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:singleLine="true"
                    android:text="关于我们"
                    android:textColor="@color/input_text_color"
                    android:textSize="16sp" />

                <ImageView
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_gravity="right|center"
                    android:scaleType="centerInside"
                    android:src="@drawable/accessory" />
            </LinearLayout>

            <Button
                android:id="@+id/btn_exit_login"
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:layout_margin="20dp"
                android:background="@drawable/common_blue_rounded_btn_bg"
                android:text="退出登录"
                android:textColor="#fff"
                android:textSize="18sp" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>